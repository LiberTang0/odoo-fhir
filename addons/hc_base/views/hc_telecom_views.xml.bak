<openerp>
    <data>

<!-- Telecom Views -->            
            
    <record id="hc_base.hc_telecom_view_search" model="ir.ui.view">           
      <field name="name">hc_telecom_view_search</field>         
      <field name="model">hc.telecom</field>          
      <field name="arch" type="xml">          
        <search string="Telecoms">        
          <field name="name"/>      
        </search>       
      </field>          
    </record>           
                
    <record id="hc_base.hc_telecom_view_tree" model="ir.ui.view">           
      <field name="name">hc_telecom_view_tree</field>         
      <field name="model">hc.telecom</field>          
      <field name="arch" type="xml">          
        <tree string="Telecoms">        
          <field name="name"/>      
          <field name="system"/>      
        </tree>       
      </field>          
    </record>           
                
    <record id="hc_base.hc_telecom_view_form" model="ir.ui.view">           
      <field name="name">hc_telecom_view_form</field>         
      <field name="model">hc.telecom</field>          
      <field name="arch" type="xml">          
        <form string="Telecom">       
          <sheet>     
            <div class="oe_title oe_left">    
              <h1>  
                <field name="name" default_focus="1" placeholder="Tel: +22 607 123 4567, E-mail: jd@isp.com, Web: www.isp.com"/>
              </h1> 
            </div>    
            <group>   
              <group>
                <field name="system" widget="radio" colspan="1"/>
              </group>  
              <group> 
              </group>  
            </group>    
          </sheet>      
        </form>       
      </field>          
    </record>           
                
    <!-- Telecom Action and Menu -->            
                
    <record id="hc_base.hc_telecom_action" model="ir.actions.act_window">           
      <field name="name">Telecom</field>          
      <field name="type">ir.actions.act_window</field>          
      <field name="res_model">hc.telecom</field>          
      <field name="view_type">form</field>          
      <field name="view_mode">tree,form</field>         
    </record>           

    <menuitem name="Telecom" id="hc_base.menu_telecom" parent="hc_base.menu_datatype" action="hc_base.hc_telecom_action" sequence="60"/>

  </data>
</openerp>

